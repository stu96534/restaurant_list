<!-- search bar -->
<div class="container search-bar">
  <div class="text-center title">
    <h1 class="mb-4">傑克餐廳瀏覽網</h1>
  </div>

  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
      <form action="/search">
        <div class="d-flex flex-column flex-sm-row align-items-sm-center">
          <div class="input-group mb-2 mb-sm-0 mr-sm-2">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
          <div class="input-group">
            <select class="form-control" id="sort" name="sort" value="{{sort}}">
              <option value="name" {{#if name }} selected {{/if}}>A > Z</option>
              <option value="-name" {{#if name2 }} selected {{/if}}>Z > A</option>
              <option value="category" {{#if cate }} selected {{/if}}>類別</option>
              <option value="location" {{#if local }} selected {{/if}}>地區</option>
            </select>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>




<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    {{#each restaurantList}}
    <div class="col">
      <div class="card  mb-3">
        <a href="/restaurants/{{this._id}}">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}"></a>
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{this.name}}</h6>

          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i> {{this.category}}
          </div>

          <span class="badge badge-pill badge-danger font-weight-normal">
            {{this.rating}}
            <i class="fas fa-star fa-xs"></i>
          </span>
        </div>

        <div class="d-flex justify-content-end card-footer">
          <a href="./restaurants/{{this._id}}/edit" class="btn btn-info mx-1">Edit</a>
          <a href="./restaurants/{{this._id}}" class="btn btn-success mx-1">Detail</a>
          <form action="./restaurants/{{this._id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}



  </div>
</div>